############################################################
# Smart Cal - Example Environment Configuration
# Copy to .env and replace placeholder values.
# Never commit real credentials.
############################################################

# ----------------------------------------------------------
# MongoDB Connection (separate per environment)
# Include authSource=admin for Atlas or admin-auth clusters.
# ----------------------------------------------------------
DB_CONNECTION_URL_STG=mongodb+srv://USERNAME:PASSWORD@stg-cluster.example.mongodb.net/?retryWrites=true&w=majority&authSource=admin
DB_CONNECTION_URL_PROD=mongodb+srv://USERNAME:PASSWORD@prod-cluster.example.mongodb.net/?retryWrites=true&w=majority&authSource=admin

# Database Names (override per environment)
DB_NAME_STG=GRUBTECH_MASTER_DATA_STG_V2
DB_NAME_PROD=GRUBTECH_MASTER_DATA_PROD_V2

# Primary Orders Collection
COLLECTION_NAME=PARTNER_RESTAURANT_ORDER

# Tax Calculation Settings
# If true, prices are tax-inclusive and exclusive values are derived.
# TAX_INCLUSIVE=true

# Logging Level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO

# Optional explicit credentials (if not embedded in URI)
# DB_USERNAME=
# DB_PASSWORD=

# Feature Flags (uncomment to enable overrides)
# OUTPUT_FORMAT=text
# VALIDATION_STRICT_MODE=false

# End